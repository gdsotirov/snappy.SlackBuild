+find_package(GTest)
 if(GTEST_FOUND)
   set(HAVE_GTEST 1)
 endif(GTEST_FOUND)
 
-find_package(Gflags QUIET)
+find_package(Gflags)
 if(GFLAGS_FOUND)
   set(HAVE_GFLAGS 1)
 endif(GFLAGS_FOUND)
@@ -212,7 +212,7 @@
       "snappy-test.cc"
   )
   target_compile_definitions(snappy_unittest PRIVATE -DHAVE_CONFIG_H)
